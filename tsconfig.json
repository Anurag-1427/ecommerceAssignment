{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": "./src",
    "paths": {
      "~navigation": ["navigation"],
      "~navigation/*": ["navigation/*"],
      "~screens": ["screens"],
      "~screens/*": ["screens/*"],
      "~utils": ["utils"],
      "~utils/*": ["utils/*"],
      "~store": ["store"],
      "~store/*": ["store/*"],
    },
  }
}
